<UserControl x:Class="GameClient.MidCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameClient"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="120" d:DesignWidth="80" MinHeight="120" MinWidth="80">
    <Grid>
        <materialDesign:Card Margin="0,0,0,0" VerticalAlignment="Stretch">
            <Grid>
                <TextBlock x:Name="TBColor" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="♠" VerticalAlignment="Center" FontSize="48"/>
                <TextBlock x:Name="TBValue" Margin="0,10,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI Light" FontSize="24">9</TextBlock>
            </Grid>
        </materialDesign:Card>

    </Grid>
</UserControl>
